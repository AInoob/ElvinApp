.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-display {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  color: #666;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  text-align: center;
  animation: fadeIn 0.5s ease-in;
}

.error-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #ff4d4f;
}

.error-hint {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #999;
}

.greeting-container {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.5s ease-out;
}

.video-container {
  padding: 20rpx;
}

.greeting-video {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.greeting-text {
  font-size: 34rpx;
  line-height: 1.6;
  color: #333;
  text-align: center;
  padding: 30rpx;
  font-weight: 500;
}

.no-greeting {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  color: #999;
  padding: 60rpx;
  animation: fadeIn 0.5s ease-in;
}

.hint-text {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
