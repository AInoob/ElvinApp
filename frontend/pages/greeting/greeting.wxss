.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form-group {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.5s ease-out;
}

.label {
  display: block;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}

.radio-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-size: 30rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.radio-label:active {
  background: #e0e0e0;
}

.radio-label radio {
  margin-right: 16rpx;
}

.generate-btn {
  width: 90%;
  max-width: 600rpx;
  margin-top: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: white;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.generate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.2);
}

@keyframes slideUp {
  from {
    transform: translateY(20rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
